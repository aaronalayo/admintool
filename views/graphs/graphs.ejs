<script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.1.3/Chart.bundle.min.js"></script>
<div class="chart-container" style="position: relative; height:40vh; width:50vw">
  <canvas id="chart"></canvas>
</div>

<script>                

var ctx = document.getElementById('chart');

    var chart = new Chart(ctx, {
    type: 'line',
    data: {
        labels:<%-JSON.stringify(labels)%>,
        datasets: [{
            label: 'Measurements',
            data: <%-JSON.stringify(dataset)%>,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                // 'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                // 'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                // 'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255, 99, 132, 1)',
                // 'rgba(54, 162, 235, 1)',
                // 'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
        responsive: true, 
        maintainAspectRatio: false,
        tooltips: {
           
        },
        hover: {
            mode: 'dataset',
            mode: 'point',
        },
        title: {
            display: true,
            text: 'Graph to display measuremts from sensor 64'
    },
        scales: {
            xAxes: [{
                
                scaleLabel: {
                    display: true,
                },
                ticks: {
                callback: function(value) { 
                return new Date(value).toLocaleDateString('de-DE', {hour:'numeric', minute:'numeric'}); 
    },
},
        
     }],
            
            yAxes: [{
                
                ticks: {
                    beginAtZero: true
           
                }
            }]
        }
    }
    
});

</script>

